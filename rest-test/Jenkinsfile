pipeline {
    agent any
    
    tools {
        maven 'Maven_3.5.4'
    }
    
    environment {
        DIR = 'rest-test'
    }


    stages {
    
	    stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                ''' 
            }
        }
        stage('Build') {
            steps {
            	    dir("${DIR}") {
                        sh 'mvn -Dmaven.test.failure.ignore=true test'
            	    }
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}