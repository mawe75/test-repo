pipeline {
    agent any
    
    tools {
        maven 'Maven_3.5.4'
    }
    
    environment {
        ROOT_DIR = 'rest-test'
    }


    stages {
    
	    stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                ''' 
            }
        }
        stage('Build') {
            steps {
            	    dir("${ROOT_DIR}") {
                        sh 'mvn -Dmaven.test.failure.ignore=true test'
            	    }
            }
            post {
                success {
                    junit '**/target/surefire-reports/**/*.xml' 
                    jacoco(execPattern: '**/target/coverage-reports/jacoco-ut.exec')
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Build docker image'
            	script {
					docker.build("rest-test-${env.BUILD_ID}", "rest-test")
            	}
            }
        }
    }
}